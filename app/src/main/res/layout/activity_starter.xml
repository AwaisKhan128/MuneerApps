<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".starter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/create_acc"
            android:drawableLeft="@drawable/admin_panel_settings_24"
            android:onClick="adminOnclick"
            android:paddingStart="100dp"
            android:paddingEnd="100dp"
            android:text="Admin"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/create_acc"
            android:drawableLeft="@drawable/account_user_24"
            android:onClick="userOnClick"
            android:paddingLeft="100dp"
            android:paddingEnd="100dp"
            android:text="Worker"
            android:textAllCaps="false"
            android:textSize="24sp" />

    </LinearLayout>
</RelativeLayout>